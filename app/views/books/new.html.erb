<h2>New book</h2>

<!-- @book vem do @book da action new do controller -->
<%= form_for @book do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :genre %>
    <%= f.text_field :genre, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :year %>
    <%= f.text_field :year, min: 1900, class: 'form-control' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-danger' %>
<% end %>