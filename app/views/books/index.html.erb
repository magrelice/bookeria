<h1> Bookeria </h1>

<table> 
  <tr>
   	<th>Title</th>
   	<th>Author</th>   	
   	<th>Genre</th>
   	<th>Year</th>   	
   	<th>Actions</th>
  </tr>
  
    <% @books.each do |book| %>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.genre %></td>
      <td><%= book.year %></td>
      <td><%= link_to 'Show book', book %></td>
    </tr>
  <% end %>
</table> 	

